<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Date header with day navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevDay"
            android:text="‹"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:text="Entries for --"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextDay"
            android:text="›"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>


    <!-- Settings button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:text="Settings"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Food name -->
    <EditText
        android:id="@+id/etFood"
        android:hint="Food name"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScan"
        android:text="Scan Barcode"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <!-- Meal type -->
    <Spinner
        android:id="@+id/spMealType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>

    <!-- Row 1: Calories + Protein -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/etCalories"
            android:hint="Calories"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etProtein"
            android:hint="Protein (g)"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Row 2: Carbs + Fat -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/etCarbs"
            android:hint="Carbs (g)"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etFat"
            android:hint="Fat (g)"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Add entry -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        android:text="Add Entry"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Totals -->
    <TextView
        android:id="@+id/tvTotals"
        android:text="Totals: 0 kcal • P0/C0/F0 g"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Goals header -->
    <TextView
        android:id="@+id/tvGoalsHeader"
        android:text="Today's Progress"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Calories progress -->
    <TextView
        android:id="@+id/tvCalorieProgress"
        android:text="Calories: 0 / 2000 (0%)"
        android:textColor="?attr/colorOnSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/pbCalories"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="2000"
        android:progress="0"
        android:progressTint="?attr/colorPrimary"/>

    <!-- Protein progress -->
    <TextView
        android:id="@+id/tvProteinProgress"
        android:text="Protein: 0 / 150 g (0%)"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/pbProtein"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="150"
        android:progress="0"
        android:progressTint="?attr/colorPrimary"/>

    <!-- Carbs progress -->
    <TextView
        android:id="@+id/tvCarbProgress"
        android:text="Carbs: 0 / 250 g (0%)"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/pbCarbs"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="250"
        android:progress="0"
        android:progressTint="?attr/colorPrimary"/>

    <!-- Fat progress -->
    <TextView
        android:id="@+id/tvFatProgress"
        android:text="Fat: 0 / 70 g (0%)"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/pbFat"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="70"
        android:progress="0"
        android:progressTint="?attr/colorPrimary"/>

    <!-- Clear button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClear"
        android:text="Clear All Data"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntries"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
