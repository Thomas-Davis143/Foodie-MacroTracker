<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date header with day navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevDay"
                android:text="‹"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:text="Entries for --"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextDay"
                android:text="›"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
        </LinearLayout>

        <!-- Settings button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:text="Settings"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Food name -->
        <EditText
            android:id="@+id/etFood"
            android:hint="Food name"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScan"
            android:text="Scan Barcode"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Meal type -->
        <Spinner
            android:id="@+id/spMealType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>

        <!-- NEW: Serving size controls (quantity + unit) -->
        <LinearLayout
            android:id="@+id/servingRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilQuantity"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Quantity">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuantity"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUnit"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Unit"
                app:endIconMode="dropdown_menu">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvUnit"
                    android:inputType="none"
                    android:importantForAutofill="no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- NEW: Collapsible Nutrition Facts card wrapping your macro fields -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nutritionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header (tap to expand/collapse) -->
                <LinearLayout
                    android:id="@+id/nutritionHeader"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNutritionTitle"
                        android:text="Nutrition Facts"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/ivChevron"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:rotation="180"/>
                </LinearLayout>

                <!-- Collapsible content: your existing macro inputs -->
                <LinearLayout
                    android:id="@+id/nutritionContent"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Row 1: Calories + Protein -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">

                        <EditText
                            android:id="@+id/etCalories"
                            android:hint="Calories"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/etProtein"
                            android:hint="Protein (g)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Row 2: Carbs + Fat -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">

                        <EditText
                            android:id="@+id/etCarbs"
                            android:hint="Carbs (g)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/etFat"
                            android:hint="Fat (g)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Add entry -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:text="Add Entry"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Totals -->
        <TextView
            android:id="@+id/tvTotals"
            android:text="Totals: 0 kcal • P0/C0/F0 g"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Goals header -->
        <TextView
            android:id="@+id/tvGoalsHeader"
            android:text="Today's Progress"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Progress bars -->
        <TextView
            android:id="@+id/tvCalorieProgress"
            android:text="Calories: 0 / 2000 (0%)"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/pbCalories"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="2000"
            android:progress="0"
            android:progressTint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvProteinProgress"
            android:text="Protein: 0 / 150 g (0%)"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/pbProtein"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="150"
            android:progress="0"
            android:progressTint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvCarbProgress"
            android:text="Carbs: 0 / 250 g (0%)"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/pbCarbs"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="250"
            android:progress="0"
            android:progressTint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvFatProgress"
            android:text="Fat: 0 / 70 g (0%)"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/pbFat"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="70"
            android:progress="0"
            android:progressTint="?attr/colorPrimary"/>

        <!-- Clear button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:text="Clear All Data"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEntries"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
